		 <antcall target="Deploy"/>
	 </target>
	 
	 
    <target name="buildear">
	
	
	 
	 <property name="app.buildear.path" value="C:/tibco/tra/5.7/bin"/>
	 <property name="archive.path" value="/Deployment/JenkinsDemo.archive"/>
	  <property name="ear.path" value="JenkinsDemo.ear"/>
	  <property name="project.path" value="JenkinsDemo"/>
	  <property name="xml.path" value="JenkinsDemo.xml"/>
	  <property name="deployed.xml.path" value="JenkinsDemo_Deployed.xml"/>
	  
	  <property name="ear.dir" value="./ear"/>
      <property name="xml.dir" value="./xml"/>
	  
	  <delete dir="${ear.dir}"/>
		 <delete dir="${xml.dir}"/>
		 <mkdir dir="${ear.dir}"/>
		 <mkdir dir="${xml.dir}"/>
		 
   <exec executable="${app.buildear.path}/buildear.exe"  resolveexecutable="true">
      <arg line="-x"/>
      <arg value="-v"/>
      <arg line="-ear ${archive.path} "/>
      <arg line="-o ${ear.dir}/${ear.path}"/>
      <arg line="-p ${project.path}"/>
   </exec>
</target>

